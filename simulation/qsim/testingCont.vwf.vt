module controller_vlg_vec_tst();
// constants                                           
// general purpose registers
reg carSig;
reg clk;
reg reset;
reg [3:0] setWeight;
// wires                                               
wire [3:0] countVal;
wire [2:0] mainStreetLight;
wire shouldReset;
wire [2:0] sideStreetLight;
wire [2:0] state;
wire [3:0] sum;

wire sampler;                             

// assign statements (if any)                          
controller i1 (
// port map - connection between master ports and signals/registers   
	.carSig(carSig),
	.clk(clk),
	.countVal(countVal),
	.mainStreetLight(mainStreetLight),
	.reset(reset),
	.setWeight(setWeight),
	.shouldReset(shouldReset),
	.sideStreetLight(sideStreetLight),
	.state(state),
	.sum(sum)
);

// clk
always
begin
	clk = 1'b0;
	clk = #1000 1'b1;
	#1000;
end 

// reset
initial
begin
	reset = 1'b1;
end 

// carSig
initial
begin
	carSig = 1'b0;
	carSig = #26000 1'b1;
	carSig = #10000 1'b0;
end 
// setWeight[ 3 ]
initial
begin
	setWeight[3] = 1'b0;
end 
// setWeight[ 2 ]
initial
begin
	setWeight[2] = 1'b1;
end 
// setWeight[ 1 ]
initial
begin
	setWeight[1] = 1'b0;
end 
// setWeight[ 0 ]
initial
begin
	setWeight[0] = 1'b1;
end 

controller_vlg_sample_tst tb_sample (
	.carSig(carSig),
	.clk(clk),
	.reset(reset),
	.setWeight(setWeight),
	.sampler_tx(sampler)
);

controller_vlg_check_tst tb_out(
	.countVal(countVal),
	.mainStreetLight(mainStreetLight),
	.shouldReset(shouldReset),
	.sideStreetLight(sideStreetLight),
	.state(state),
	.sum(sum),
	.sampler_rx(sampler)
);
endmodule

