`timescale 1 ps/ 1 ps
module controller_vlg_sample_tst(
	carSig,
	clk,
	reset,
	setWeight,
	sampler_tx
);
input  carSig;
input  clk;
input  reset;
input [3:0] setWeight;
output sampler_tx;

reg sample;
time current_time;
always @(carSig or clk or reset or setWeight)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

